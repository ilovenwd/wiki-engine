<%- form_tag( wiki_page_path(@page.lang, @page.url)) do -%>
  <dl>
    <dt><%= label_tag :'wiki[content]', 'Content:' %></dt>
    <dd><%= text_area_tag :'wiki[content]', @page.content, :size => '100x30' %></dd>
    
    <dd><%= submit_tag 'Save' %> or <%= link_to 'Cancel', wiki_page_path(@page.lang, @page.url) %></dd>
  </dl>
<%- end -%>
